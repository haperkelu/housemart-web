<config charset="utf-8">

	<var-def name="pageHtml">
		<http url="${url}" charset="utf-8" >
		</http>
	</var-def>

	<var-def name="pageXml">
		<html-to-xml>
			<template>${pageHtml}</template>
		</html-to-xml>
	</var-def>

	<var-def name="houseUrlList">
		<xpath expression="//*[@id='jsBigParent']/div/div[1]/div[2]/a/@href">
			<var name="pageXml" />
		</xpath>
	</var-def>

	
	<loop item="item" index="i">
		<list>
			<var name="houseUrlList" />
		</list>

		<body>
			<template>
				${houseUrls.add(item)};
			</template>
		</body>
	</loop>

	<var-def name="maxSize">
		<xpath expression="//*[@class='pgn__text']/text()">
			<var name="pageXml" />
		</xpath>
	</var-def>

	<loop item="item" index="i">
		<list>
			<var name="maxSize" />
		</list>

		<body>
			<template>
				${maxSizeUrls.add(item)};
			</template>
		</body>
	</loop>
	
</config>